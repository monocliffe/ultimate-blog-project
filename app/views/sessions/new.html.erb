<%= form_tag session_path do %>
  <h3>Please Login</h3>

  <div id= "alert">
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>">
        <%= value %>
      </div>
    <% end %>
  </div>

  <p>
    <label>Email:</label>
    <%= email_field_tag 'email' %>
  </p>
  <p>
    <label>Password:</label>
    <%= password_field_tag 'password' %>
  </p>
  <p><%= submit_tag 'Login' %></p>
<% end %>