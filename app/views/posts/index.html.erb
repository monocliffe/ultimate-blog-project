<h1>Posts</h1>

<div id= "flash">
  <% flash.each do |key, value| %>
    <div class="flash <%= key %>">
      <%= value.html_safe %>
    </div>
  <% end %>
</div>

<hr>

  <div>
  <% @posts.each do |post| %>
    <p>
      <h2><%= post.title %></h2>
      <div>
        Created at: <%= post.created_at.strftime('%d/%m/%Y %H:%M') %>  |
        Submitted by: <%= post.user.forename %> <%= post.user.surname %>
      </div>
      <br>
      <%= post_summary(post) %>
      <br><br>
      <%= link_to 'View', post %>
      <% if @current_user %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      <hr>
    </p>
  <% end %>
  </div>
<br>
