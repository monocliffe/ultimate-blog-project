<div class="col-md-6">
  <%= form_with(post: post, class: 'form form-horizontal', local: true) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control', size: 40 %>
    </div>

    <div class="field">
      <%= form.label :body %>
      <%= form.rich_text_area :body %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>